
<div class="container">
  <div class="row">

    <div class="col-md-3">
      <h1>User info</h1>

      <td>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      </td>
      <table class="table">
        <tbody>
            <tr>
              <th>name</th>
              <td><%= @book.user.name %></td>
            </tr>
            <tr>
              <th>introduction</th>
              <td><%= @book.user.introduction %></td>
            </tr>
        </tbody>
      </table>
      <div class="row actions">
       <%= link_to "",edit_user_path(@book.user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>
  <h1>New book</h1>
      <%= form_with model: @new_book, local:true do |f| %>
        <h4>title</h4>
        <%= f.text_field :title %>
        <h4>opinion</h4>
        <%= f.text_field :body %>
        <p>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
        </p>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
   <h1>Book detail</h1>
      <table class="table">
        <tbody>
              <tr>
                <th>
                  <p><%= attachment_image_tag @book.user, :profile_image, :fill, 20, 20 ,fallback: "no_image.jpg"%></p>
                  <%=link_to @book.user.name, user_path(@book.user) %>
                </th>
                <th><%=link_to @book.title %></th>
                <th><%= @book.body %></th>
                <% if user_signed_in? && current_user.id == @book.user_id %>
                  <th>
                    <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
                  </th>
                  <th>
                    <%= link_to "Destroy",book_path(@book), method: :delete, class: "btn btn-danger" %>
                  </th>
                <% end %>
              </tr>
        </tbody>
      </table>
    </div>
    </div>
  </div>