<div class="container">
	<div class="row">
	  <div class="col-lg-3"></div>
	  <div class="edit-user"></div>
  		<div class="col-lg-6">
  			<h1>User info</h1>
  			
  			<div class="alert">
			    <% if @user.errors.any? %>
  			     <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
 			    	・<% @user.errors.full_messages.each do |message| %>
    			      <%= message %>
 			      	<% end %>
			    <% end %>
		    </div>
  			
  			<%= form_with model: @user, local:true do |f| %>
          <h4>Name</h4>
          <%= f.text_field :name %>
          <h4>image</h4>
              <label for="inputImage"></label>
              <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          <h4>introduction</h4>
          <%= f.text_field :introduction %>
          <p>
          <%= f.submit 'Update User', class: "btn btn-secondary" %>
          </p>
        <% end %>
  		</div>
		</div>
		<div class="col-lg-3">
		
		</div>
	</div>
</div>